<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Posts</h1>
    <%= link_to "New post",
      new_post_path,
      class: "rounded-lg py-3 px-5 bg-gray-700 text-white block font-medium",
      data: {
        action: "click->slideover#open",
        remote: true
      } %>
  </div>

  <div id="posts" class="min-w-full">
    <%= render @posts %>
  </div>
</div>
