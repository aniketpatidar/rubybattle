<div class="profile-container p-8 rounded-lg shadow-lg max-w-4xl mx-auto">
  <div class="profile-header flex flex-col sm:flex-row items-center">
    <div class="profile-avatar text-center text-white text-4xl rounded-full w-24 h-24 flex items-center justify-center">
      <% if @user.avatar&.present? %>
        <%= image_tag @user.avatar, class: "h-16 w-16 object-cover rounded-full" %>
      <% end %>
    </div>
    <% if current_user != @user %>
      <%= render 'invitations/friendship', user: @user, current_user: current_user %>
    <% end %>
    <div class="profile-info mt-4 sm:mt-0 sm:ml-6 text-center sm:text-left">
      <h1 class="text-3xl font-bold"><%= @user.full_name %></h1>
      <p class="text-gray-400"><%= @user.email %></p>
      <p class="text-sm text-gray-500 mt-1">Joined <%= time_ago_in_words(@user.created_at) %> ago</p>
    </div>
  </div>

  <div class="profile-navigation mt-8 text-center sm:text-left">
    <ul class="flex justify-center sm:justify-start space-x-4">
      <li><%= link_to "Summary", '#', class: "rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white focus:outline-none focus:ring hover:bg-blue-700" %></li>
      <li><%= link_to "Questions", '#', class: "rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white focus:outline-none focus:ring hover:bg-blue-700" %></li>
      <li><%= link_to "Answers", '#', class: "rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white focus:outline-none focus:ring hover:bg-blue-700" %></li>
      <li><%= link_to "Votes", '#', class: "rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white focus:outline-none focus:ring hover:bg-blue-700" %></li>
    </ul>
  </div>

  <div class="profile-discussions mt-8">
    <h2 class="text-xl font-bold text-blue-600 focus:outline-none focus:ring hover:text-blue-700"><%= pluralize(@user.discussions.count, "discussion") %></h2>
    <% @user.discussions.each do |discussion| %>
      <div class="p-4 mt-4 rounded-lg">
        <div class="flex justify-between items-start">
          <div>
            <p class="font-bold text-blue-500"><%= link_to discussion.name, discussion_path(discussion), class: "hover:underline" %></p>
          </div>
          <div class="text-sm">
            <span class="ml-2"><%= discussion.posts.count %> answers</span>
          </div>
        </div>
        <div class="flex items-center mt-2">
          <span class="text-gray-400 text-sm">Asked <%= time_ago_in_words(discussion.created_at) %> ago.</span>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  @media (min-width: 640px) {
    .profile-container {
      padding: 24px;
    }
  }

  @media (max-width: 639px) {
    .profile-avatar {
      width: 64px;
      height: 64px;
      font-size: 1.5rem;
    }
    .profile-info h1 {
      font-size: 1.75rem;
    }
    .profile-navigation ul {
      flex-direction: column;
      space-y-2;
    }
    .post-item, .discussion-item {
      padding: 16px;
    }
  }
</style>
