<%= turbo_frame_tag dom_id(discussion) do %>
  <div class="bg-white shadow-md rounded-lg my-4">
    <div class="p-4 flex items-center justify-between border-b border-gray-200">
      <div>
        <h1 class="text-2xl font-bold text-gray-800"><%= discussion.name %></h1>
        <div class="mt-1 flex items-center space-x-2">
          <% if discussion.pinned %>
            <span class="inline-block bg-blue-100 text-blue-800 text-xs font-semibold px-2 py-0.5 rounded-full">Pinned</span>
          <% end %>
          <% if discussion.closed %>
            <span class="inline-block bg-red-100 text-red-800 text-xs font-semibold px-2 py-0.5 rounded-full">Closed</span>
          <% end %>
        </div>
      </div>
      <div class="flex space-x-2">
        <%= link_to "Edit", edit_discussion_path(discussion), class: "text-blue-500 hover:text-blue-700 font-medium text-sm" %>
        <span>|</span>
        <%= link_to "Destroy", discussion, method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:text-red-700 font-medium text-sm" %>
      </div>
    </div>
  </div>
<% end %>
