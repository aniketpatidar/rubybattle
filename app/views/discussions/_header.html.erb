<%= turbo_frame_tag dom_id(discussion) do %>
  <div class="flex items-center justify-between p-4 bg-white shadow-md rounded-lg">
    <div>
      <h1 class="text-2xl font-bold text-gray-800"><%= discussion.name %></h1>
      <span class="text-gray-500 text-sm">
        <% if discussion.pinned %>
          <span class="inline-block bg-blue-100 text-blue-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded-full">Pinned</span>
        <% end %>
        <% if discussion.closed %>
          <span class="inline-block bg-red-100 text-red-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded-full">Closed</span>
        <% end %>
      </span>
    </div>
    <div class="flex space-x-2">
      <%= link_to "Edit", edit_discussion_path(discussion), class: "text-blue-500 hover:text-blue-700 font-medium" %>
      <span>|</span>
      <%= link_to "Destroy", discussion, method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:text-red-700 font-medium" %>
    </div>
  </div>
<% end %>
