<%= form_with(model: discussion, class: "contents") do |form| %>
  <% if discussion.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(discussion.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% discussion.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.rich_text_area :description, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.check_box :pinned, class: "mr-2" %><%= form.label :pinned %>
  </div>

  <div class="my-5">
    <%= form.check_box :closed, class: "mr-2" %><%= form.label :closed %>
  </div>

  <% if discussion.new_record? %>
    <%= form.fields_for :posts do |post| %>
      <div class="my-5">
        <%= post.label :body %>
        <%= post.rich_text_area :body, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
      </div>
    <% end %>
  <% end %>

  <div class="inline">
    <%= form.submit class: "rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white focus:outline-none focus:ring hover:bg-blue-700 cursor-pointer" %>
  </div>
<% end %>
