<div id="<%= dom_id discussion %>" class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl mb-5 mt-5">
  <div class="md:flex">
    <div class="p-4 w-full">
      <div class="text-xl underline">
        <%= link_to discussion.name, discussion %>
      </div>
      <p class="mt-4 mb-4"><%= discussion.description %></p>
      <div class="flex justify-between items-start mt-2">
        <div class="flex space-x-2 mt-1">
          <span class="text-xs px-3 py-2 rounded bg-gray-700 text-white">#ruby</span>
          <span class="text-xs px-3 py-2 rounded bg-gray-700 text-white">#backend</span>
        </div>
        <span class="ml-2"><%= discussion.posts.count %> answers</span>
      </div>
      <div class="flex justify-between items-center mt-2">
        <%= link_to discussion.user.full_name, discussion.user.slug, class: "text-sm underline" %>
        <span class="text-sm">Asked <%= time_ago_in_words(discussion.created_at) %> ago.</span>
      </div>
    </div>
  </div>
</div>
