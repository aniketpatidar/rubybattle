<div id="<%= dom_id discussion %>" class="bg-white/80 backdrop-blur-sm rounded-xl shadow-lg overflow-hidden mb-6 border border-gray-200/50 transition-all duration-200 hover:shadow-xl hover:bg-white/90">
  <div class="flex flex-col sm:flex-row">
    <%= render "discussions/voting", discussion: discussion %>

    <div class="flex-grow p-4 sm:p-6">
      <div class="group">
        <%= link_to discussion, data: { turbo: false }, class: "text-lg sm:text-xl font-semibold text-gray-900 group-hover:text-blue-600 transition-colors duration-200 line-clamp-2" do %>
          <%= discussion.name %>
        <% end %>
      </div>
      <p class="mt-3 text-sm sm:text-base text-gray-600 line-clamp-3"><%= discussion.description %></p>

      <div class="flex flex-wrap items-center gap-3 mt-4">
        <ul class="flex flex-wrap gap-2">
          <% discussion.categories.each do |category| %>
            <li>
              <%= link_to category do %>
                <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-gradient-to-r from-blue-600/10 to-indigo-600/10 text-blue-700 ring-1 ring-inset ring-blue-700/10 hover:bg-gradient-to-r hover:from-blue-600/20 hover:to-indigo-600/20 transition-all duration-200">
                  <%= category.name %>
                </span>
              <% end %>
            </li>
          <% end %>
        </ul>
        <span class="inline-flex items-center gap-1 text-xs text-gray-500">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
          <%= discussion.posts.count %> answers
        </span>
      </div>

      <div class="flex flex-wrap items-center gap-x-4 gap-y-2 mt-4 pt-4 border-t border-gray-200/50 text-sm">
        <div class="flex items-center gap-2">
          <div class="w-6 h-6 rounded-full bg-gradient-to-r from-blue-600 to-indigo-600 flex items-center justify-center text-white text-xs font-medium shadow-sm">
            <%= discussion.user.initials %>
          </div>
          <%= link_to discussion.user.full_name, "/#{discussion.user.slug}", class: "text-gray-600 hover:text-blue-600 transition-colors duration-200" %>
        </div>
        <span class="text-gray-500 flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Asked <%= time_ago_in_words(discussion.created_at) %> ago
        </span>
      </div>
    </div>
  </div>
</div>
