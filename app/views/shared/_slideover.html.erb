<div data-slideover-target="slideover" class="h-screen overflow-y-scroll fixed -right-full lg:-right-1/3 top-0 flex-1 flex flex-col w-full lg:w-1/3 bg-gray-100 transition-all duration-500 z-40">
  <div class="flex px-4 justify-between items-center bg-gray-900">
    <h3 class="text-xl text-white" id="slideover-header"></h3>
    <button data-action="slideover#close" class="flex items-center justify-center h-12 w-12 rounded-full focus:outline-none focus:bg-gray-600 hover:bg-gray-600" aria-label="Close slideover">
      <%= inline_svg_tag 'close.svg', class: "h-7 w-7 text-white" %>
    </button>
  </div>
  <div class="mt-4 px-4 text-gray-700">
    <div id="slideover-content"></div>
  </div>
</div>
