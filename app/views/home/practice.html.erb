<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="p-6">
        <h1 class="text-2xl font-bold mb-4"><%= @challenge.title %></h1>
        <div class="prose mb-6">
          <%= @challenge.description %>
        </div>
        
        <div class="flex justify-between items-center mt-8">
          <div>
            <%= button_to 'Practice with Someone', create_room_rooms_path, method: :post, 
                class: 'bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded' %>
          </div>
          <div>
            <form class="flex items-center space-x-2">
              <input type="text" name="room_code" placeholder="Enter Room Code" 
                     class="border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
              <button type="submit" class="bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded">
                Join Room
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
