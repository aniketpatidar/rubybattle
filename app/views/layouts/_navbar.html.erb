<header class="shadow-md max-w-4xl mx-auto py-3 px-6 mt-4 rounded-full">
  <nav class="flex justify-between items-center">
    <div class="text-2xl">RubyBattle</div>
    <div class="space-x-4 flex items-center rounded-full px-6 py-3">
      <%= link_to 'Home', "/", class: 'px-2 py-1' %>
      <%= link_to 'Discussions', discussions_path, class: 'px-2 py-1' %>
      <%= link_to 'Profile', "/#{current_user.slug}", class: 'px-2 py-1' %>
      <%= link_to 'Settings', edit_user_registration_path, class: 'px-2 py-1' %>
      <div class="rounded-full flex items-center justify-center">
        <%= turbo_stream_from current_user, :notifications %>
        <%= render "nav/notifications", user: current_user %>
      </div>
    </div>
    <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: "delete" }, class: 'px-4 py-2 bg-blue-500 p-2 text-white rounded-lg cursor-pointer hover:bg-blue-700' %>
  </nav>
</header>
