<div class="container mx-auto px-4">
  <div class="max-w-6xl mx-auto">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold">Choose a Challenge</h1>
      
      <div class="flex space-x-2">
        <%= link_to 'All',
            challenges_path,
            class: "px-4 py-2 rounded-full #{@selected_difficulty.nil? ? 'bg-gray-800 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" %>
        
        <% Challenge.difficulties.each do |name, _value| %>
          <%= link_to name.titleize,
              challenges_path(difficulty: name),
              class: "px-4 py-2 rounded-full #{@selected_difficulty == name ? 'bg-gray-800 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" %>
        <% end %>
      </div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @challenges.each do |challenge| %>
        <div class="block bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-xl transition-all">
          <div class="p-6">
            <h2 class="text-xl font-bold mb-2"><%= challenge.name %></h2>
            <p class="text-gray-600 mb-4 line-clamp-2"><%= challenge.description %></p>
            <div class="flex justify-between items-center">
              <span class="text-sm font-medium px-3 py-1 rounded-full <%= challenge.difficulty_badge_color %>">
                <%= challenge.difficulty.titleize %>
              </span>
              <%= link_to practice_path(room_id: "#{SecureRandom.uuid}--#{challenge.id}"), class: "text-sm font-medium text-blue-500" do %>
                Practice →
              <% end %>
              <%= link_to challenge_path(challenge), class: "text-sm font-medium text-green-500" do %>
                Start Battle →
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
